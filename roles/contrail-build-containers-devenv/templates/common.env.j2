{% if ansible_distribution == 'RedHat' %}
{% set containers_tag = 'rhel-' + contrail_version %}
LINUX_DISTR=rhel7
YUM_ENABLE_REPOS=""
{% elif ansible_distribution == 'CentOS' %}
{% set containers_tag = contrail_version %}
LINUX_DISTR=centos
{% endif %}
CONTRAIL_CONTAINER_TAG={{ containers_tag }}
CONTRAIL_REGISTRY={{ contrail_docker_registry }}
CONTRAIL_REPOSITORY="http://${RPM_REPO_IP}:${RPM_REPO_PORT}"
CONTRAIL_DEPLOYERS_TAG={{ containers_tag }}
OPENSTACK_REPOSITORY=http://{{ nexus.fqdn }}/repository
DEPLOYERS_BASE_CONTAINER={{ contrail_docker_registry }}/contrail-general-base:{{ containers_tag }}
CONTRAIL_PARALLEL_BUILD='true'
CONTRAIL_KEEP_LOG_FILES='true'
VENDOR_NAME='TungstenFabric'
VENDOR_DOMAIN='io.tungsten'
